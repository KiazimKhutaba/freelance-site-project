{% macro breadcrumb(sections) %}
<div class="px-4" aria-label="breadcrumb" style="margin-top: 45px">
    <div class="container">
        <ol class="breadcrumb bg-transparent">
            <li class="breadcrumb-item"><a href="business.html">Главная</a></li>
            {% for section in sections %}
                <li class="breadcrumb-item"><a href="{{ section.href }}">{{ section.caption }}</a></li>
            {% endfor %}
        </ol>
    </div>
</div>
{% endmacro %}

