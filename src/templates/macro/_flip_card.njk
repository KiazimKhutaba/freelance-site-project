{% macro flip_card(image) %}
<div class="flip-card">
    <div class="flip-card-inner">
        <div class="flip-card-front">
            <img src="images/{{ image }}" alt="Avatar" class="img-fluid" />
        </div>
        <div class="flip-card-back">
            <h1>John Doe</h1>
            <p>Architect & Engineer</p>
            <p>We love that guy</p>
        </div>
    </div>
</div>
{% endmacro %}