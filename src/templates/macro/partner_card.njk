{% macro partner_card(image, name) %}
<div class="card bg-light">
    <div class="card-body text-center">
        <img src="images/partners/{{ image }}"
             class="rounded-1 mb-3"
             alt="" />
        <h3 class="card-title mb-3" style="font-size: 1.4em">{{ name }}</h3>
    </div>
</div>
{% endmacro %}